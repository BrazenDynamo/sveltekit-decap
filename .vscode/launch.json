  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Dev server",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["vite", "dev", "--", "--open"],
      "skipFiles": [
        "<node_internals>/**"
      ],
    }, 
    {
      "type": "node",
      "request": "launch",
      "name": "Static preview",
      "preLaunchTask": "npm: build",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["vite", "preview"],
      "skipFiles": [
        "<node_internals>/**"
      ],
    },
  ]
}